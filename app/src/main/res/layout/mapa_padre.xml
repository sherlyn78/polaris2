<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B2FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/cabecera_princiapl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_anterior"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:src="@drawable/icono_left"
                app:tint="@android:color/black"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="boton_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapa"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <!-- los siguientes seran imagebuttom -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtn_GeocercaSegura"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="5dp"
                android:src="@drawable/hexagono__marcar_zona"
                android:scaleType="fitCenter"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#5AD5CDCD"
                android:contentDescription="Geocerca"/>

<!--            &lt;!&ndash; los siguientes seran imagebuttom &ndash;&gt;-->
<!--            <androidx.appcompat.widget.AppCompatImageButton-->
<!--                android:id="@+id/imgbtn_trazarRuta"-->
<!--                android:layout_width="48dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:minWidth="48dp"-->
<!--                android:minHeight="48dp"-->
<!--                android:src="@drawable/trazar_ruta"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                android:contentDescription="graficos"/>-->


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtn_marcarZona"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="45dp"
                android:minHeight="45dp"
                android:src="@drawable/marcar_zona"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="graficos"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgbtn_ubicacion"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ubicacion"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="graficos"/>

        </LinearLayout>


        <!-- Aqui va ir la imgen del mapa-->
        <LinearLayout
            android:id="@+id/Mapa_contenedor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/cabecera_princiapl"
            app:layout_constraintBottom_toTopOf="@+id/footer_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.mapbox.maps.MapView
                android:id="@+id/mapViewPadre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mapbox_locationComponentEnabled="true"
                app:mapbox_locationComponentPuckBearing="heading"
                mapbox:mapbox_cameraZoom="42"/>

        </LinearLayout>


        <!-- Barra de navegación inferior -->
        <LinearLayout
            android:id="@+id/footer_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- inicio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-8dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_InicioM"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="hogar"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="-8dp" />
            </LinearLayout>

            <!-- Gráficos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-8dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_mapaM"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/mapa"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="graficos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapa"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="-8dp"/>
            </LinearLayout>



            <!-- Ejercicio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-8dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_notificacionesM"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/notificaciones"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="ejercicio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="-8dp" />
            </LinearLayout>

            <!-- Registros -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-8dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_perfilM"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/perfil"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="registros" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="-8dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/floating_generar_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Estilos de mapa"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fab_main_ruta"
            android:background="@drawable/bg_menu"
            android:visibility="gone"
            android:elevation="6dp"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_ruta_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcar Inicio" />

            <Button
                android:id="@+id/btn_ruta_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcar Final" />

            <Button
                android:id="@+id/btn_enviar_ruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar" />


        </LinearLayout>



        <!-- Aquí empieza el menú flotante y su botón -->
        <LinearLayout
            android:id="@+id/floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Estilos de mapa"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fab_main"
            android:background="@drawable/bg_menu"
            android:visibility="gone"
            android:elevation="6dp"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/SATELLITE_STREETS"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/border_redound_botton"
                android:src="@drawable/satelite"
                android:scaleType="fitCenter"
                android:contentDescription="SATELLITE_STREETS"/>

            <ImageButton
                android:id="@+id/MAPBOX_STREETS"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/border_redound_botton"
                android:src="@drawable/calle"
                android:scaleType="fitCenter"
                android:contentDescription="MAPBOX_STREETS" />

            <ImageButton
                android:id="@+id/DARK"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/border_redound_botton"
                android:src="@drawable/mdo_oscuro"
                android:scaleType="fitCenter"
                android:contentDescription="DARK" />

            <ImageButton
                android:id="@+id/OUTDOORS"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/border_redound_botton"
                android:src="@drawable/bicicleta"
                android:scaleType="fitCenter"
                android:contentDescription="OUTDOORS" />

            <ImageButton
                android:id="@+id/Estandar_padre"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/border_redound_botton"
                android:src="@drawable/casa_3d"
                android:scaleType="fitCenter"
                android:contentDescription="estandar" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Generar ruta"
            app:layout_constraintBottom_toBottomOf="@+id/Mapa_contenedor"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="16dp"
            android:src="@drawable/trazar_ruta"
            app:backgroundTint="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Cambiar tipo de mapa"
            app:layout_constraintBottom_toBottomOf="@+id/Mapa_contenedor"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp"
            android:src="@drawable/ic_layers"
            app:backgroundTint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>