<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- (Opcional) Para ver páginas en cache si no hay internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--para uso de mapbox, permisos requeridos-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_polaris"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_polaris"
        android:supportsRtl="true"
        android:theme="@style/Theme.PolarisGuard"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Aquí dentro debe estar la actividad -->
        <activity android:name=".activity_main"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PolarisGuard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.mapbox.maps.token"
            android:value="@string/mapbox_access_token" />

        <activity android:name=".acerc_de_nosotros"></activity>

        <activity android:name=".crear_cuenta"></activity>

        <activity android:name=".login"></activity>

        <activity android:name=".mapa_hijo"></activity>

        <activity android:name=".mapa_padre"></activity>

        <activity android:name=".notificaciones"></activity>

        <activity android:name=".pantalla_inicio_mapa"></activity>

        <activity android:name=".perfil_usuario"></activity>

        <activity android:name=".registro_hijo_datos"></activity>

        <activity android:name=".registro_hijo_exitoso"></activity>

        <activity android:name=".registro_hijo_perfil"></activity>

        <activity android:name=".registro_hijo_terminos"></activity>

        <activity android:name=".registro_padre_datos"></activity>

        <activity android:name=".registro_padre_direccion"></activity>

        <activity android:name=".registro_padre_exitoso"></activity>

        <activity android:name=".registro_padre_perfil"></activity>

        <activity android:name=".registropadre_datoshijo"></activity>

        <activity android:name=".registropadre_terminos"></activity>



    </application>

</manifest>