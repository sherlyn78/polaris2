<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Encabezado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barra_superior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#22570D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BotÃ³n izquierdo -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_anterior"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icono_left"
            app:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="boton_left"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

        <!-- Titulo -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil hijo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/foto_perfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/icon_photoperfil"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:tint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/barra_superior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campos -->
    <LinearLayout
        android:id="@+id/contenedor_textcorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/foto_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="usuario@gmail.com"/>

    </LinearLayout>

    <!-- Campos -->
    <LinearLayout
        android:id="@+id/contenedor_campos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/contenedor_textcorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtx_usuarioHijo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#F0E0E0"
                android:padding="8dp"
                android:hint="user"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Numero de telefono"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtx_telefonoHijo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#F0E0E0"
                android:padding="8dp"
                android:hint="0123456789"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Padre tutor"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtx_tutor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#F0E0E0"
                android:padding="8dp"
                android:hint="Tutor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Telefono del tutor"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtx_telefonoTutor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#F0E0E0"
                android:padding="8dp"
                android:hint="0123456789"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Correo del tutor"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtx_correoTutor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_redound_botton"
                android:backgroundTint="#F0E0E0"
                android:padding="8dp"
                android:hint="Correo"/>
        </LinearLayout>


    </LinearLayout>

    <!-- Campos obligatorios -->

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continuarRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_redound_botton"
            android:backgroundTint="#131421"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>